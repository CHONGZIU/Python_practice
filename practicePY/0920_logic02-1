arr = [5, 10, 7, 8, 3, 1, 9, 2]

def quick_sort(array):
    left = []
    right = []
    
    if len(array) <= 1: 
        return array
    
    p = array[0]
    
    for i in range(1, len(array)):
        if p > array[i]:
            left.append(array[i])
        else:
            right.append(array[i])
    
    return quick_sort(left) + [p] +  quick_sort(right) 

print(quick_sort(arr))
